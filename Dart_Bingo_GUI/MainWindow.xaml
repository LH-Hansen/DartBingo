<Window x:Class="Dart_Bingo_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="300"
        Width="400"
        Icon="Resources/Dart.ico">

    <Grid>
        <TextBlock
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,98,0,0"
                   FontSize="14"
                   FontWeight="Bold" Height="23" ><Run Text="Page amount"/><LineBreak/><Run/></TextBlock>

        <TextBox Name="UserInputTextBox"
                 Width="100"
                 Height="21"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Text="1" />

        <Button Content="Generate card(s)" 
                Width="100" 
                Height="29" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Click="OnButtonClick" Margin="0,158,0,0" />

    </Grid>
</Window>
